<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TelaPassos">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:srcCompat="@drawable/orcamento2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/txtpasso1"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:background="@drawable/titulotxt"
            android:gravity="center"
            android:text="Passo 1 – Defina metas "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView" />

        <ImageView
            android:id="@+id/cardview"
            android:layout_width="360dp"
            android:layout_height="230dp"
            android:background="@drawable/cardview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtpasso1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="350dp"
            android:layout_height="230dp"
            android:padding="16dp"
            android:layout_marginBottom="70dp"
            android:text="É importante se organizar financeiramente e criar um orçamento doméstico, mas isso exige disciplina. Se você tem objetivos bem definidos, fica mais fácil. "
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/cardview"
            app:layout_constraintEnd_toEndOf="@id/cardview"
            app:layout_constraintStart_toStartOf="@id/cardview" />

        <TextView
            android:id="@+id/txtbloco2"
            android:layout_width="350dp"
            android:layout_height="230dp"
            android:padding="16dp"
            android:layout_marginBottom="-5dp"
            android:text="Estabeleça com sua família metas de curto, médio e longo prazo. O que vocês querem alcançar? Seja uma viagem, se aposentar bem ou ter mais liberdade financeira.  "
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/cardview"
            app:layout_constraintEnd_toEndOf="@id/cardview"
            app:layout_constraintStart_toStartOf="@id/cardview" />
        <TextView
            android:id="@+id/txtbloco3"
            android:layout_width="350dp"
            android:layout_height="230dp"
            android:padding="16dp"
            android:layout_marginBottom="-65dp"
            android:text="Enquanto vocês estiverem juntando dinheiro, lembrarem sempre porque estão fazendo isso. "
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/cardview"
            app:layout_constraintEnd_toEndOf="@id/cardview"
            app:layout_constraintStart_toStartOf="@id/cardview" />



        <TextView
            android:id="@+id/textView3"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:text="Passo 2 – Faça um controle financeiro "
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/titulotxt"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/cardview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/cardview2"
            android:layout_width="360dp"
            android:layout_height="350dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/cardview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="130dp"
            android:text="Essa parte é a mais difícil, porque exige que você mude seus hábitos e organize sua vida financeira.  "
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/cardview2"
            app:layout_constraintStart_toStartOf="@id/cardview2"
            app:layout_constraintBottom_toBottomOf="@id/cardview2" />

        <TextView
            android:id="@+id/textpassos2"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="50dp"
            android:text="Anotar todas as entradas (salário, rendas extras, férias, décimo terceiro salário, participação nos lucros) e todas as saídas (escola, moradia, alimentação, lazer, combustível) exige disciplina. "
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/cardview2"
            app:layout_constraintStart_toStartOf="@id/cardview2"
            app:layout_constraintBottom_toBottomOf="@id/cardview2" />
        <TextView
            android:id="@+id/textpassos3"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="-20dp"
            android:text="Sua renda mensal varia? Quais são as despesas fixas e as despesas variáveis? "
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/cardview2"
            app:layout_constraintStart_toStartOf="@id/cardview2"
            app:layout_constraintBottom_toBottomOf="@id/cardview2" />

        <TextView
            android:id="@+id/textpassos4"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="-100dp"
            android:text="De volta, essa é a hora de analisar seus erros e acertos. Já junta algum dinheiro todo mês? Tem vários serviços de streaming que não usa? Ou seja, encontre pontos a serem corrigido no orçamento doméstico. "
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/cardview2"
            app:layout_constraintStart_toStartOf="@id/cardview2"
            app:layout_constraintBottom_toBottomOf="@id/cardview2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:text="Passo 3 – Poupar e investir "
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/titulotxt"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/cardview2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"  />

        <ImageView
            android:id="@+id/cardview3"
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/cardview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Agora você já tem o controle de suas despesas e receitas, pode pensar em poupar e investir seu dinheiro. Afinal, dinheiro parado perde poder de compra. "
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/cardview3"
            app:layout_constraintStart_toStartOf="@id/cardview3"
            app:layout_constraintTop_toBottomOf="@id/textView5" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>