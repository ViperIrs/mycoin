<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TelaCreditos">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation ="vertical">

        <TextView
            android:id="@+id/txtdesenvolvimento1"
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/titulotxt"
            android:text="Desenvolvimento: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/cardview4"
            android:layout_width="380dp"
            android:layout_height="130dp"
            android:background="@drawable/cardview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtdesenvolvimento1"
            android:layout_marginBottom="10dp"
             />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="340dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/iencia_da_omputacao"
            android:layout_marginTop="-10dp"
            app:layout_constraintTop_toBottomOf="@id/txtdesenvolvimento1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txtdesenvolvimento"
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/titulotxt"
            android:text="Desenvolvimento de Software"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview5"/>

        <TextView
            android:id="@+id/cardview"
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/cardview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtdesenvolvimento" />

        <TextView
            android:id="@+id/txtelvio"
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:padding="16dp"
            android:text="- Nome do professor: Prof. Dr. Elvio Gilberto da
Silva.




                                                                             - Nome do professor colaborador: Fred Aparecido Matano"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/cardview"
            app:layout_constraintStart_toStartOf="@id/cardview"
            app:layout_constraintTop_toTopOf="@id/cardview" />

        <TextView
            android:id="@+id/txtintegrantes"
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/titulotxt"
            android:text="Integrantes"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview"/>

        <TextView
            android:id="@+id/cardview2"
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/cardview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtintegrantes" />

        <TextView
            android:id="@+id/txtintegrantes2"
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:padding="16dp"
            android:text="-Igor Ribeiro Scarlassara                                                 -Thiago Dalasta Camillo                                       -Thiago VinÃ­cius de Souza Carlos                                       -Vitor Biazotto Rodrigues"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/cardview2"
            app:layout_constraintStart_toStartOf="@id/cardview2"
            app:layout_constraintTop_toTopOf="@id/cardview2" />

        <TextView
            android:id="@+id/txtApoio"
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/titulotxt"
            android:text="Apoio: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/cardview5"
            android:layout_width="380dp"
            android:layout_height="130dp"
            android:background="@drawable/cardview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtApoio"
            android:layout_marginBottom="10dp"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="340dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/nova"
            android:layout_marginTop="-10dp"
            app:layout_constraintTop_toBottomOf="@id/txtApoio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>